@model DocumentSimilarity.Models.LoginViewModel

@{
    ViewBag.Title = "ورود به وب سایت";
}






        
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
               <div  style="font-family:WYekan;" >
                   <div class="login-panel panel panel-default" style="width: 350px; margin: auto">
                       <div class="panel-heading">
                           @Html.AntiForgeryToken()

                           <h3 class="panel-title">برای ورود به وب سایت از حساب کاربری خود استفاده نمایید.</h3>
                       </div>
                       <div class="panel-body">
                           <form role="form">
                               <fieldset style="width: 90%; margin: auto;">
                                   @Html.ValidationSummary(true)

                                   <div class="input-group" dir="ltr" >

                                       @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "نام کاربری", dir = "rtl" })
                                       @Html.ValidationMessageFor(m => m.UserName)
                                       <i class="input-group-addon fa fa-user">
                                       </i>
                                   </div>


                                   <div class="input-group" dir="ltr" style="margin-top:20px">
                                       @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "گذرواژه", @Value = "", dir = "rtl" })
                                       @Html.ValidationMessageFor(m => m.Password)
                                       <i class="input-group-addon fa fa-lock " dir="rtl">
                                       </i>
                                   </div>

                                   <div style="margin-top:20px">
                                       <label>
                                           @Html.CheckBoxFor(m => m.RememberMe)
                                           @Html.LabelFor(m => m.RememberMe)
                                       </label>
                                   </div>
                                   <!-- Change this to a button or input when using this as a form -->
                                   <input style="margin-top:40px" type="submit" value="ورود" class="btn btn-lg btn-primary btn-block" />
                               </fieldset>
                               <p style="margin-top:15px ;text-align:center">
                                   اگر دارای حساب کاربری نمی باشید لطفا از مدیر سیستم درخواست نمایید یک حساب کاربری برای شما ایجاد نماید.
                               </p>
                           </form>
                       </div>
                   </div>
</div>
            }
        
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

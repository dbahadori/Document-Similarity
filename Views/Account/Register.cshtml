@model DocumentSimilarity.Models.RegisterViewModel
@{
    ViewBag.Title = "Registration";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <hr />
    @Html.ValidationSummary()
    
    
    <div  style="font-family:WYekan;" >
                   <div class="login-panel panel panel-default" style="width: 350px; margin: auto">
                       <div class="panel-heading">
                           @Html.AntiForgeryToken()

                           <h3 class="panel-title">Create a new account to login to the website.</h3>
                       </div>
                       <div class="panel-body">
                               <fieldset style="width: 90%; margin: auto;">
                                   @Html.ValidationSummary(true)

                                   <div class="input-group" dir="ltr" >

                                       @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User Name", dir = "rtl" })
                                       <i class="input-group-addon fa fa-user">
                                       </i>
                                   </div>


                                   <div class="input-group" dir="ltr" style="margin-top:20px">
                                       @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", dir = "rtl" })
                                       <i class="input-group-addon fa fa-lock " dir="rtl">
                                       </i>
                                   </div>
                                   <div class="input-group" dir="ltr" style="margin-top:20px">
                                       @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Repeat password", dir = "rtl" })
                                       <i class="input-group-addon fa fa-lock " dir="rtl">
                                       </i>
                                   </div>

                                   
                                   <!-- Change this to a button or input when using this as a form -->
                                   <input style="margin-top:40px" type="submit" value="Register" class="btn btn-lg btn-primary btn-block" />
                               </fieldset>
                               <p style="margin-top:15px ;text-align:center">
                                   If you have an account, please. Do @Html.ActionLink("Login", "Login").
                               </p>
                           
                       </div>
                   </div>
</div>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

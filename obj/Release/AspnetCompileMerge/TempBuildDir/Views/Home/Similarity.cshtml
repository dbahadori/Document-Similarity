@model DocumentSimilarity.Models.ResearchDocument

@{
    ViewBag.Title = "تشخیص میزان تشابه اسناد";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
<script>
   
    $("#fileuns").fileinput({
        type: 'POST',
        language: 'fa1',
       // uploadUrl: '@Url.Action("UploadFile","Home")',
        uploadExtraData: { 'operation': "SimilarityDetection" },
        allowedFileExtensions: ["doc", "docx"]
    });

    $("#filestr").fileinput({
        type: 'POST',
        language: 'fa1',
       // uploadUrl: '@Url.Action("UploadFile","Home")',
        uploadExtraData: {'Operation':"SimilarityDetection"},
        allowedFileExtensions: ["doc", "docx"]
    });


 

  

</script>
    }
  
 
   <div>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs navbar-right">
        <li class="active">
            <a href="#structureTab" data-toggle="tab">اسناد ساختارمند</a>
        </li>
        <li>
            <a href="#UnstructureTab" data-toggle="tab">اسناد بدون ساختار</a>
        </li>

    </ul>
       
    <!-- Tab panes -->
    <div class="tab-content navbar-right" style="font-family:WYekan">
        <div id="structureTab" class="tab-pane fade in active">
            <div class="row">
                <div class="col-lg-12">
                    <h4>پایان نامه ها و مقالات ساختارمند</h4>
                    <p>پایان نامه ها و مقالات ساختارمند، آن دسته از اسنادی هستند که دارای بخش های مشخص و از پیش تعیین شده می باشند. این بخش ها شامل، عنوان، نگارنده، چکیده، کلمات کلیدی و مقدمه می باشند که با استفاده از عبارات معیین و از پیش تعیین شده ای در سند مربوطه مشخص شده اند.</p>
                </div>
            </div>

            <hr />
@using (Html.BeginForm("Similarity", "Home", new { FileType = "Structural" }, FormMethod.Post,
                   new { enctype = "multipart/form-data", style = "direction:ltr;width:500px;margin:auto;" ,id="SubmitStructuralFile"}))
{

            <div class="row">
                <div class="col-lg-12">
                    <div style="text-align:center">لطفا سند (مقاله/پایان نامه) ساختارمند خود را انتخاب و بارگزاری کنید: </div>
                    <br />

                   
                    <input id="filestr" type="file" name="file"  class="file file-loading" style="font-size:14px;" />

                        <div class="err" style="padding-top:7px;direction:rtl">
                            @ViewBag.error

                        </div>
                    
                </div>
            </div>
            <div class="row">
                <div  dir="rtl" style="width:450px;margin:auto;text-align:right">

                    
                    <div class="col-lg-6">
                        <select name="SimilarityFilterCombo" class="selectpicker show-menu-arrow form-control" multiple data-max-options="4" style="border-radius: 5px;text-align:right;direction:rtl">
                            <option value=" Title" selected>
                                تشابه در عنوان سند
                            </option>
                            <option value="Authors">تشابه در نگارنده سند</option>
                            <option value="Keywords">تشابه در کلمات کلیدی سند</option>
                            <option value="Abstract">تشابه در چکیده</option>
                            <option value="Body">تشابه در بدنه سند</option>
                            <option value="All">تشابه در کل سند</option>
                        </select>
                    </div>
                    
                    <div class="col-lg-6" style="text-align:left">
                        فیلتر شود بر اساس:
                    </div>

                </div>

                
                <div class="checkbox" id="CheckStr" style="font-family: WYekan; text-align: center;float:right; display:block;direction:rtl">
                    <label>
                        سند مقایسه شونده به پایگاه اسناد اضافه شود.
                        @Html.CheckBox("MustBeIndexCheckBox", true, new { style = "font-family:WYekan,margin:auto", id = "MustBeIndexCheckBox" });
                    </label>
                </div>
               
                
            </div>
}
        </div>             
           
        <div id="UnstructureTab" class="tab-pane fade ">
            <div class="row">
                <div class="col-lg-12">
                    <h4>پایان نامه ها و مقالات بدون ساختار مشخص</h4>
                    <p>پایان نامه ها و مقالات بدون ساختار مشخص، آن دسته از اسنادی هستند که یا شامل بخش های از پیش تعیین شده و مشخصی نمی باشند و یا بخش های محتوای آن ها با استفاده از عبارات معین و از پیش تعریف شده مشخص نگردیده اند.بنابراین الزامی است که محتوای بخش های آن توسظ کاربر بطور مناسب وارد شوند. </p>
                </div>
            </div>

            <hr />

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="row">
                <div class="col-lg-12">

                    <div class="form-group">
                        @Html.LabelFor(m => m.Title, new { @class = " control-label" }):
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Title, new { @class = "col-md-20 form-control", placeholder = "عنوان", style = "width:500px" })
                            
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Authors[0].Name, new { @class = " control-label" }):
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Authors[0].Name, new { @class = "col-md-20 form-control", placeholder = "نام نگارنده", style = "width:500px" })
                           
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Keywords, new { @class = " control-label" }):
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Keywords, new { @class = "col-md-20 form-control", placeholder = "کلمات کلیدی ", style = "width:500px" })
                          
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Year, new { @class = " control-label" }):
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Year, new { @class = "col-md-20 form-control", placeholder = "سال نگارش ", style = "width:500px" })
                           
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Abstract, new { @class = " control-label" }):
                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.Abstract, 10, 10, new { @class = "col-md-20 form-control", placeholder = "چکیده", style = "width:80%" })
                            

                        </div>
                    </div>

                </div>
            </div>
            <br />
@using (Html.BeginForm("Similarity", "Home", new { FileType = "Unstructural" }, FormMethod.Post,
                   new { enctype = "multipart/form-data", style = "direction:ltr;width:500px;margin:auto;" }))
{
            <div class="row">
                <div class="col-lg-12">
                    <div style="text-align:center;float:none">لطفا سند (مقاله/پایان نامه) بدون ساختارخود را انتخاب و بارگزاری کنید: </div>
                    <br />
                   

    <input id="fileuns" type="file" name="file" class="file file-loading"  style="font-size:14px;"  />

                        <div class="err" style="padding-top:7px;direction:rtl">
                            @ViewBag.error

                        </div>
                    
                </div>
            </div>
            <div class="row">
                <div dir="rtl" style="width:200px;margin:auto;text-align:right">
                    فیلتر شود بر اساس:

                    <select name="SimilarityFilterCombo" class="selectpicker show-menu-arrow form-control" multiple data-max-options="4" style="border-radius: 5px;text-align:right;direction:rtl">
                        <option value=" Title" selected>
                            تشابه در عنوان سند
                        </option>
                        <option value="Authors">تشابه در نگارنده سند</option>
                        <option value="Keywords">تشابه در کلمات کلیدی سند</option>
                        <option value="Abstract">تشابه در چکیده</option>
                        <option value="Body">تشابه در بدنه سند</option>
                        <option value="All">تشابه در کل سند</option>
                    </select>

                </div>

                <div class="checkbox" id="CheckUns"  style="font-family: WYekan; text-align: center;direction:rtl">
                    <label>
                        سند مقایسه شونده به پایگاه اسناد اضافه شود.
                        @Html.CheckBox("MustBeIndexCheckBox", true, new { style = "font-family:WYekan,margin:auto", id = "DocumentSavingUns" });
                    </label>
                </div>
                
            </div>
}
        </div>

               </div>

           </div>


